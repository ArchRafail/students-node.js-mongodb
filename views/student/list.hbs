<h3 class="row justify-content-around">
    <a class="col-2 btn btn-secondary" href="/student">Create New</a>
    <span class="col-9" style="text-align: center">Student List</span>
</h3>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>City</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
            <tr class="align-middle">
                <td>{{this.fullName}}</td>
                <td>{{this.email}}</td>
                <td>{{this.mobile}}</td>
                <td>{{this.city}}</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/student/{{this.id}}">Edit</a>
                    <a class="btn btn-warning btn-sm ms-2" href="/student/delete/{{this.id}}"
                    onClick="return confirm('Are you sure you want to delete this record?');">Delete</a>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>